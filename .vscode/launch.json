{
    // Recommended to use PM2 and run [pm2 start pm2.config.js] to
    // set up development environment.
    "version": "0.2.0",
    "configurations": [
        // Jobs
        {
            "type": "node",
            "request": "launch",
            "name": "Launch Jobs",
            "protocol": "inspector",
            "cwd": "${workspaceFolder}/server",
            "runtimeExecutable": "npm",
            "runtimeArgs": ["run-script", "start-jobs:dev"],
            "envFile": ".env"
        },
        {
            "type": "node",
            "request": "attach",
            "name": "Attach to Jobs",
            "port": 9230,
            "restart": true
        },

        // API
        {
            "type": "node",
            "request": "launch",
            "name": "Launch API",
            "protocol": "inspector",
            "cwd": "${workspaceFolder}/server",
            "runtimeExecutable": "npm",
            "runtimeArgs": ["run-script", "start-api:dev"],
            "envFile": ".env"
        },
        {
            "type": "node",
            "request": "attach",
            "name": "Attach to API",
            "port": 9231,
            "restart": true
        },

        // Bots
        {
            "type": "node",
            "request": "launch",
            "name": "Launch Bot",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "program": "${workspaceFolder}/bots/discord/index.js",
            "envFile": "${workspaceFolder}/bots/discord/.env"
        }
    ]
}